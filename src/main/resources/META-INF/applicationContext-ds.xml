<?xml version="1.0" encoding="UTF-8"?>

<!-- Special Spring 3.1 context which defines different bean depends on the activated profile. In this application it's allow us to declare standard MySQL 
	data source or CloudFoundry data source -->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cloud="http://schema.cloudfoundry.org/spring"
	xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://schema.cloudfoundry.org/spring http://schema.cloudfoundry.org/spring/cloudfoundry-spring-0.8.xsd">

	<!-- Beans set only used for profile "default" -->
	<beans profile="default">
		<!-- Good old C3PO data source -->
		<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
			<property name="driverClass" value="com.mysql.jdbc.Driver" />
			<property name="jdbcUrl" value="jdbc:mysql://localhost:3306/skillbrowser" />
			<property name="user" valu e="root" />
			<property name="password" value="root" />
			<property name="maxPoolSize" value="10" />
			<property name="maxStatements" value="0" />
			<property name="minPoolSize" value="5" />
		</bean>
	</beans>

	<!-- Beans set only used for profile "cloud" which is automatically activated when deployed on CloudFoundry (see CloudApplicationContextInitializer.java) -->
	<beans profile="cloud">
		<!-- CloudFoundry convenient data source declaration -->
		<cloud:data-source id="dataSource" />
	</beans>

</beans>